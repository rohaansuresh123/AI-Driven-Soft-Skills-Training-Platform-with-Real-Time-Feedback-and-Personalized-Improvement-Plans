    <!-- Chatbot Widget -->
    <div class="chatbot-widget" id="chatbot-widget">
        <div class="chatbot-header">Don - AI Assistant</div>
        <div class="chatbot-body" id="chatbot-body">
            <div class="chatbot-message bot">
                <div class="message-content">Hello! I'm Don. How can I assist you with your vocabulary lessons today?</div>
            </div>
        </div>
        <div class="chatbot-input">
            <textarea id="chatbot-input" rows="1" placeholder="Type your message..."></textarea>
            <button onclick="sendMessage()">Send</button>
        </div>
    </div>

    <script>
        // Function to simulate starting a lesson
        function startLesson(lessonName) {
            alert('Starting ' + lessonName);
            // Here you can redirect to the lesson detail page
            // window.location.href = 'lesson-detail.html';
        }

        // Function to toggle chatbot visibility
        function toggleChatbot() {
            const chatbotWidget = document.getElementById('chatbot-widget');
            chatbotWidget.style.display = chatbotWidget.style.display === 'none' || chatbotWidget.style.display === '' ? 'flex' : 'none';
        }

        // Function to handle chatbot messages
        function sendMessage() {
            const input = document.getElementById('chatbot-input');
            const message = input.value.trim();
            if (message === '') return;

            const chatbotBody = document.getElementById('chatbot-body');

            // User message
            const userMessage = document.createElement('div');
            userMessage.classList.add('chatbot-message', 'user');
            userMessage.innerHTML = `<div class="message-content">${message}</div>`;
            chatbotBody.appendChild(userMessage);

            // Clear input
            input.value = '';

            // Simulate bot response
            setTimeout(() => {
                const botMessage = document.createElement('div');
                botMessage.classList.add('chatbot-message', 'bot');
                botMessage.innerHTML = `<div class="message-content">I'm here to help! What would you like to know about vocabulary lessons?</div>`;
                chatbotBody.appendChild(botMessage);
                chatbotBody.scrollTop = chatbotBody.scrollHeight;
            }, 1000);
        }
    </script>
